@import url('https://fonts.googleapis.com/css?family=Electrolize');

/* 全局 */
.clearfix {
	zoom:1;
}
.clearfix:before,.clearfix:after {
	content:" ";
	display:table;
}
.clearfix:after {
	clear:both;
}

// 动画
line-transition() {
	transition-duration: 0.2s;
	transition-timing-function: ease-in-out;
}


a {
	color:$body-font;
	text-decoration:none;
	outline:none;

	line-transition();
	transition-property: color;

	&:hover,
	&:active {
		color: $line-light;
	}

	&:focus {
		outline: none;
	}
}

img {
	border:0;
}


/* 结构 */
body {
	color:$body-font;
	background: $body-background;
	font:normal 14px "TIBch","Classic Grotesque W01","Helvetica Neue",Arial,"Hiragino Sans GB","STHeiti","Microsoft YaHei","WenQuanYi Micro Hei",SimSun,sans-serif;
	-webkit-font-smoothing:antialiased;
}
#wrapper {
	width:900px;
	margin:80px auto;
	padding:0;
	border:1px solid $gray-300;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	background: $white;
	overflow: hidden;

	+mobile() {
		width: auto;
		margin: 0;
		border-top: 2px solid $line-light;
	}

	+tablet() {
		width: auto;
		margin: 0;
		border-top: 2px solid $line-light;
	}
}

#main {
	padding: 50px 50px 0;

	+mobile() {
		padding: 20px 20px 0;
	}

	+tablet() {
		padding: 20px 20px 0;
	}
}

.pagination {
	width: 100%;
	height: 50px;
	margin-top: 50px;
	border-top: 1px solid $line-dark;
	float: left;

	.current {
		border-top: 1px solid $line-light;
		position: relative;
		top: -1px;
	}

	ul {
		margin: 0;
		padding: 0;
		float: left;
	}

	span {
		float: left;
		height: 50px;
		line-height: 50px;
		padding: 0 20px;
		margin-right: 10px;

		+mobile() {
			margin-right: 0;
		}
	}

	a {
		float: left;
		height: 50px;
		line-height: 50px;
		padding: 0 20px;
		margin-right: 10px;

		&:hover {
			position: relative;
			top: -1px;
			border-top: 1px solid $line-light;
		}

		+mobile() {
			margin-right: 0;
		}
	}
}
